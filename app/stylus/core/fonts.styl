/*------------------------------------*\
    Fonts
\*------------------------------------*/

@font-face
    font-family: 'brandon_grotesquelight_italic';
    src: url('/fonts/brandomgrotesque/brandon_light_it-webfont.eot');
    src: url('/fonts/brandomgrotesque/brandon_light_it-webfont.eot?#iefix') format('embedded-opentype'),
         url('/fonts/brandomgrotesque/brandon_light_it-webfont.woff2') format('woff2'),
         url('/fonts/brandomgrotesque/brandon_light_it-webfont.woff') format('woff'),
         url('/fonts/brandomgrotesque/brandon_light_it-webfont.ttf') format('truetype'),
         url('/fonts/brandomgrotesque/brandon_light_it-webfont.svg#brandon_grotesquelight_italic') format('svg');
    font-weight: normal;
    font-style: normal;

@font-face
    font-family: 'brandon_grotesquelight';
    src: url('/fonts/brandomgrotesque/brandon_light-webfont.eot');
    src: url('/fonts/brandomgrotesque/brandon_light-webfont.eot?#iefix') format('embedded-opentype'),
         url('/fonts/brandomgrotesque/brandon_light-webfont.woff2') format('woff2'),
         url('/fonts/brandomgrotesque/brandon_light-webfont.woff') format('woff'),
         url('/fonts/brandomgrotesque/brandon_light-webfont.ttf') format('truetype'),
         url('/fonts/brandomgrotesque/brandon_light-webfont.svg#brandon_grotesquelight') format('svg');
    font-weight: normal;
    font-style: normal;
