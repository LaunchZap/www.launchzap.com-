/* ==============
    MENU
   ============== */
@media bp-smartphone
    .header
        background-color: Menu--Color
        width: 100%
        height: 48px
        position: fixed
        top: 0px
        left: 0px
        z-index: 5
        display: flex
        align-items: center
        
        .header__menu-button
            display: block

@media bp-tablet
    .header
        position: fixed
        background-color: Menu--Color
        width: 100%
        height: 48px;
        top: 0px;
        left: 0px;
        display: flex
        flex-direction: row
        align-items: center
        .header__menu-button
            display: none

@media bp-desktop
    .header
        position: fixed
        background-color: Menu--Color
        width: 100%
        height: 48px;
        top: 0px;
        left: 0px;
        display: flex
        flex-direction: row
        align-items: center
        .header__menu-button
            display: none
